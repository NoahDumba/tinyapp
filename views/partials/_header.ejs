<!-- views/partials/_header.ejs -->

<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% let loggedIn = false; %>
        <% for(let user in userDatabase) { %>
          <% if (user === userID) {loggedIn = true;}%>
        <% } %>
        <% if (loggedIn) { %>
          <span class="align-baseline pr-2"><%= userDatabase[userID]["email"] %></span>
          <form method="POST" action="/logout?_method=DELETE">
            <button style="background-color: red; border-color: red; border-radius: 4px;" type="Submit"> Log out </button>
          </form>
        <% } else { %>
          <form class="form-inline" action="/login" method="POST">
            <div class="form-group mb-2">
              <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                  <a class="nav-item nav-link" href="/registration">Register</a>
                  <a class="nav-item nav-link" href="/login">Login</a>
                </div>
              </div>
            </div>
          </form>
        <% } %>
  </nav>
</header>